pkgname=glm
pkgver=0.9.9.4
pkgrel=1
url="https://github.com/g-truc/glm.git"
source=("https://github.com/g-truc/glm/releases/download/$pkgver/glm-$pkgver.zip")
sha256sums=('972b8c319ff1b96eeac19c63563176f138527ebf6fa5110b8eac5fe23f5e7d9f')

build() {
  cd glm
  mkdir build && cd build
  cmake .. -DCMAKE_TOOLCHAIN_FILE=$VITASDK/share/vita.toolchain.cmake -DCMAKE_INSTALL_PREFIX=$prefix
  make -j$(nproc)
}

package () {
  cd glm/build
  make DESTDIR=$pkgdir install
}
